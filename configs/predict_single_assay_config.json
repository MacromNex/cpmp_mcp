{
  "_description": "Configuration for cyclic peptide single assay permeability prediction",
  "_source": "Extracted from repo/CPMP/examples/use_case_2_predict_single_assay.py",

  "device": "cpu",

  "featurization": {
    "force_field": "uff",
    "ignore_interfrag_interactions": true,
    "add_dummy_node": true,
    "one_hot_formal_charge": false
  },

  "model": {
    "d_atom": 28,
    "d_model": 64,
    "N": 6,
    "h": 64,
    "N_dense": 2,
    "lambda_attention": 0.1,
    "lambda_distance": 0.6,
    "leaky_relu_slope": 0.16,
    "dense_output_nonlinearity": "relu",
    "distance_matrix_kernel": "exp",
    "aggregation_type": "mean",
    "dropout": 0.1
  },

  "analysis": {
    "with_labels": true,
    "calculate_metrics": true,
    "probability_scaling": 5.0
  },

  "input": {
    "format": "csv",
    "required_columns": ["smiles"],
    "optional_columns": ["y"]
  },

  "output": {
    "format": "csv",
    "include_binary_classification": true,
    "include_probabilities": true,
    "include_metrics": true
  }
}