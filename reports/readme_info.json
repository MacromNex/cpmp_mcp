{
  "project_name": "cycpep-tools",
  "description": "MCP tools for cyclic peptide computational analysis and membrane permeability prediction",
  "version": "1.0.0",
  "created_date": "2025-12-31",
  "environment": {
    "python_version": "3.10",
    "package_manager": "mamba (preferred over conda)",
    "total_size": "~2.1GB",
    "key_dependencies": [
      "rdkit=2024.3.2",
      "pytorch=2.5.1",
      "pandas=2.2.3",
      "scikit-learn=1.6.1",
      "fastmcp",
      "loguru"
    ]
  },
  "tools": [
    {
      "name": "get_job_status",
      "type": "job_management",
      "description": "Check job progress and status",
      "parameters": ["job_id"],
      "example_prompt": "Check status of job abc12345"
    },
    {
      "name": "get_job_result",
      "type": "job_management",
      "description": "Get results of completed job",
      "parameters": ["job_id"],
      "example_prompt": "Get results for job abc12345"
    },
    {
      "name": "get_job_log",
      "type": "job_management",
      "description": "View job execution logs",
      "parameters": ["job_id", "tail"],
      "example_prompt": "Show last 50 lines of logs for job abc12345"
    },
    {
      "name": "cancel_job",
      "type": "job_management",
      "description": "Cancel running job",
      "parameters": ["job_id"],
      "example_prompt": "Cancel job abc12345"
    },
    {
      "name": "list_jobs",
      "type": "job_management",
      "description": "List all jobs with status",
      "parameters": ["status"],
      "example_prompt": "List all completed jobs"
    },
    {
      "name": "preprocess_cyclic_peptide_data",
      "type": "sync",
      "description": "Preprocess and split cyclic peptide datasets for model training",
      "runtime": "~15 seconds for small datasets",
      "parameters": ["input_file", "output_dir", "train_size", "skip_featurization"],
      "example_prompt": "Preprocess @examples/data/sample_cyclic_peptides.csv with 70/10/20 train/val/test splits"
    },
    {
      "name": "predict_single_assay_permeability",
      "type": "sync",
      "description": "Predict membrane permeability for a specific assay",
      "runtime": "~3 minutes for 19 molecules",
      "parameters": ["assay", "input_file", "with_labels", "device"],
      "example_prompt": "Predict Caco-2 permeability for @examples/data/sample_cyclic_peptides.csv"
    },
    {
      "name": "predict_all_assays_permeability",
      "type": "sync",
      "description": "Predict permeability across all 4 assays (PAMPA, Caco-2, RRCK, MDCK)",
      "runtime": "~8 minutes for 19 molecules",
      "parameters": ["input_file", "device", "batch_size"],
      "example_prompt": "Predict permeability across all assays for @examples/data/sample_cyclic_peptides.csv"
    },
    {
      "name": "analyze_cyclic_peptide_batch",
      "type": "sync",
      "description": "Comprehensive analysis with molecular properties and visualizations",
      "runtime": "~4 minutes for 19 molecules",
      "parameters": ["input_file", "output_dir", "calculate_properties", "create_visualizations"],
      "example_prompt": "Analyze @examples/data/sample_cyclic_peptides.csv with molecular properties and plots"
    },
    {
      "name": "submit_preprocess_data",
      "type": "submit",
      "description": "Submit preprocessing job for large datasets",
      "parameters": ["input_file", "output_dir", "job_name"],
      "example_prompt": "Submit preprocessing job for large dataset with job name 'preprocess_v1'"
    },
    {
      "name": "submit_single_assay_prediction",
      "type": "submit",
      "description": "Submit single assay prediction job",
      "parameters": ["assay", "input_file", "job_name"],
      "example_prompt": "Submit Caco-2 prediction job for large dataset"
    },
    {
      "name": "submit_all_assays_prediction",
      "type": "submit",
      "description": "Submit all assays prediction job",
      "parameters": ["input_file", "job_name"],
      "example_prompt": "Submit job to predict all assays for large peptide library"
    },
    {
      "name": "submit_batch_analysis",
      "type": "submit",
      "description": "Submit comprehensive analysis job",
      "parameters": ["input_file", "output_dir", "job_name"],
      "example_prompt": "Submit comprehensive analysis job with visualizations"
    },
    {
      "name": "validate_cyclic_peptide_smiles",
      "type": "sync",
      "description": "Validate SMILES strings for cyclic peptides",
      "runtime": "~5 seconds",
      "parameters": ["smiles_list"],
      "example_prompt": "Validate this SMILES: 'CC(=O)NC1CCCC1C(=O)O'"
    },
    {
      "name": "get_server_info",
      "type": "utility",
      "description": "Get server status and capabilities",
      "parameters": [],
      "example_prompt": "What tools and capabilities are available?"
    }
  ],
